{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Viewary",
  "version": "0.0.1",
  "identifier": "com.planetnine.viewary",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devUrl": "../src",
    "frontendDist": "../src"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Viewary - Short-form Video Feed",
        "width": 400,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 350,
        "minHeight": 600
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}