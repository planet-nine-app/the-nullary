{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "screenary",
  "version": "0.1.3",
  "identifier": "app.planetnine.screenary",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "screenary",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Game",
    "iOS": {
      "minimumSystemVersion": "17.0"
    },
    "android": {
      "versionCode": 100
    }
  }
}
